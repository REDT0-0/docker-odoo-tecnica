<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_payment_limit" model="ir.ui.view">
        <field name="name">res.config.settings.payment.limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pay_invoice_online_setting_container']" position="inside">
                <setting help="Enable or disable payment limit for the company.">
                    <field name="payment_limit_enabled"/>
                    <div class="mt-3 d-flex">
                        <field name="payment_limit_amount" readonly="not payment_limit_enabled"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
